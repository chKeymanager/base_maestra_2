<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form style="max-width: 35rem;" method="post" id="form-registrar">
            <div class="modal-content">
                <div class="modal-header"
                    style="background: #002c6c; color: white; border-bottom:solid 5px #EF7C10;">
                    <h4 class="modal-title" id="myModalLabel"
                        style="color: white; font-weight: bold;">Datos del Usuario</h4>
                    <button type="button" class="btn-close btn-light" data-bs-dismiss="modal" style="background-color: white !important;" aria-hidden="true"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese el nombre">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="usuario">Nombre de usuario</label>
                            <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingrese el usuario">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="rol">Rol</label>
                            <select name="rol" id="rol" class="form-control">
                                <option value="" selected disabled>Selecciona el rol
                                </option>
                                <option value="admin">Administrador</option>
                                <option value="viewer">Usuario comun</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="pass">Contraseña</label>
                            <input type="password" class="form-control" id="pass" name="pass" placeholder="Ingrese la contraseña">
                        </div>
                    </div>
                </div>
                <div class="modal-footer form-group"
                    style="border-top: transparent; background-color: #002c6c; margin-bottom: 0%;  border-top:solid 5px #EF7C10;"">
                    <button type="submit" class="btn"
                        style="background-color: #f26334; color: white;">Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>