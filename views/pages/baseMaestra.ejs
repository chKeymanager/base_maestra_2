		})
		
		//Carga los datos de la pagina en la url para pintar la consulta en la tabla
		$(document).ready(function() {
			const valores = window.location.search;
			const urlParams = new URLSearchParams(valores);
			if(valores != ''){
				$('#datatable1').DataTable({
					//serverSide: true, // Habilitar el procesamiento del lado del servidor
					lengthChange: false,
					scrollY: "450px",
					scrollCollapse: true,
					scrollX: true,
					paging: true,
					//pagingType:'full',
					pageLength: 10, // Cantidad de filas por página
					processing: true, // Mostrar mensaje de procesamiento mientras se obtienen los datos del servidor
					language: { // Personalizar los mensajes de la tabla
						processing: "Cargando datos...",
						zeroRecords: "No se encontraron conincidencias",
						paginate: {
							first: "Primera",
							last: "Última",
							next: "Siguiente",
							previous: "Anterior"
						}
					},
					ajax: {
						url: `/consultaBMEget?area=${urlParams.get('area')}&puesto=${urlParams.get('puesto')}&estado_c=${urlParams.get('estado_c')}&sector=${urlParams.get('sector')}&giro=${urlParams.get('giro')}&region=${urlParams.get('region')}&ramo_i=${urlParams.get('ramo_i')}&tamano=${urlParams.get('tamano')}&segmento=${urlParams.get('segmento')}&industria=${urlParams.get('industria')}&estatus_g=${urlParams.get('estatus_g')}&estatus_cod=${urlParams.get('estatus_cod')}&estatus_cat=${urlParams.get('estatus_cat')}&estatus_l=${urlParams.get('estatus_l')}&entidad=${urlParams.get('entidad')}&nivel=${urlParams.get('nivel')}&estatus_men=${urlParams.get('estatus_men')}`,
